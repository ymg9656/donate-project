<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.daun.donate.api.member.doamin.repository.MemberRepository">
    <insert id="save" parameterType="com.daun.donate.api.member.doamin.Member">
        INSERT INTO donate.MEMBER (id,pwd) VALUES (#{id},MD5(#{pwd}))
    </insert>

    <select id="findOne" parameterType="com.daun.donate.api.member.doamin.Member" resultType="com.daun.donate.api.member.doamin.Member">
        SELECT * FROM donate.MEMBER WHERE id=#{id} AND pwd=MD5(#{pwd})
    </select>
</mapper> 